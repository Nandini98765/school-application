        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading) {
        return;
    }

    // Get the value from the mobile_number field
    var mobileNumber = g_form.getValue("mobile_number");

    // Define a regular expression to allow only digits
    var regex = /^[0-9]*$/;

    // Get the custom error message field
    var errorField = 'mobile_number_error'; // Replace with the actual name of the custom field

    // Check if the mobile number contains non-numeric characters
    if (!regex.test(mobileNumber)) {
        // Display error message in the custom field
        g_form.setValue(errorField, 'Please enter only numeric values in the mobile number field.');
        
        // Optionally, clear the invalid input
        g_form.setValue('mobile_number', '');
        
        // Set focus back to the field
        g_form.getControl('mobile_number').focus();
    } else {
        // Clear the error message if input is valid
        g_form.setValue(errorField, '');
    }
}
